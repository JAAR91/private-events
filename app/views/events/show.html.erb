<div class="container">
    <div class="row">
        <div class="col-3">

        </div>
        <div class="col-6">
        <div class="border border-3 rounded p-4 bg-light my-1">
            <div class="d-flex justify-content-between m-1 d-flex border-bottom">
                <p class="text-uppercase"> <%= @event.title %> </p>
                <p><%= @event.tpeople%></p>
                <p class="text-break"> date <%= @event.date %></p>
            </div>
            <div class="d-flex justify-content-between m-1 d-flex">
                <p> event type <%= @event.eventtype %> </p>
                <p> event category<%= @event.eventcategory %></p>
            </div>
            <div class="container shadown">
                <p class="text-break"> Description<%= @event.description %></p>
            </div>
            <div class="d-flex justify-content-between m-1 d-flex" >
                
                <p class="shadown ms-auto"> frequency<%= @event.frequency %></p>
            </div> 
            <div class="d-flex justify-content-between m-1 d-flex" >
                <p> location <%= @event.location %></p>
            </div>    
            <div class="d-flex justify-content-between m-1 d-flex" >
                <p> Owner <%= @event.user.name %></p>
            </div>
            <div class="d-flex justify-content-end m-1 d-flex" >
                <% modify_event(@event).each do |mlinks|%>
                        <%= mlinks %>
                <%end%>
            </div>                  
        </div>
        <div class="col-3">

        </div>
    </div>
</div>